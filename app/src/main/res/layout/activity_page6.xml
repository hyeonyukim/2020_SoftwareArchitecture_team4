<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Page6">

    <LinearLayout
        android:id="@+id/P6header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/KNU"
        android:gravity="center"
        android:elevation="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFF"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020-2학기 추천 시간표"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_margin="40dp"
        ></TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/border"
        android:stretchColumns="*"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder"
            android:gravity="center">
            <TextView android:text="교과목번호" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="교과목명" android:layout_width="wrap_content"  android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="강의시간" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="학점" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="담당교수" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="수강 정원" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder">

            <TextView android:text="CLTR000000" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="나는바보다" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="13:00~14:15" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="3" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="김바보" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
            <TextView android:text="20" android:layout_width="wrap_content" android:background="@drawable/tableborder" android:textAlignment="center"></TextView>
        </TableRow>

    </TableLayout>

</LinearLayout>